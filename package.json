{
  "name": "@athenna/cli",
  "version": "3.0.7",
  "description": "Athenna CLI to create new projects and install components.",
  "license": "MIT",
  "author": "Jo√£o Lenon <lenon@athenna.io>",
  "bugs": "https://github.com/AthennaIO/Cli/issues",
  "repository": "https://github.com/AthennaIO/Cli.git",
  "homepage": "https://github.com/AthennaIO/Cli#readme",
  "keywords": [
    "esm",
    "athenna"
  ],
  "bin": {
    "athenna": "./bootstrap/main.js"
  },
  "scripts": {
    "start": "node bootstrap/main.js",
    "test": "npm run --silent lint:fix && node artisan test",
    "test:debug": "cross-env DEBUG=api:* && npm run --silent test",
    "test:coverage": "c8 npm run --silent test",
    "lint:fix": "eslint \"{app,bootstrap,config,database,providers,resources,routes,storage,tests}/**/*.js\" --fix"
  },
  "type": "module",
  "main": "./bootstrap/main.js",
  "types": "./bootstrap/main.d.ts",
  "exports": {
    ".": "./bootstrap/main.js"
  },
  "imports": {
    "#app/*": "./app/*.js",
    "#bootstrap/*": "./bootstrap/*.js",
    "#config/*": "./config/*.js",
    "#database/*": "./database/*.js",
    "#lang/*": "./lang/*.js",
    "#providers/*": "./providers/*.js",
    "#facades/*": "./providers/facades/*.js",
    "#resources/*": "./resources/*.js",
    "#routes/*": "./routes/*.js",
    "#storage/*": "./storage/*.js",
    "#tests/*": "./tests/*.js"
  },
  "dependencies": {
    "@athenna/artisan": "3.0.10",
    "@athenna/common": "3.0.2",
    "@athenna/config": "3.0.4",
    "@athenna/core": "3.0.15",
    "@athenna/ioc": "3.0.2",
    "@athenna/logger": "3.0.9",
    "cli-table": "^0.3.11",
    "cls-rtracer": "^2.6.2"
  },
  "devDependencies": {
    "@athenna/test": "^3.0.0",
    "@japa/assert": "^1.3.4",
    "@japa/run-failed-tests": "^1.0.7",
    "@japa/runner": "^2.0.7",
    "@japa/spec-reporter": "^1.1.12",
    "c8": "^7.11.2",
    "commitizen": "^4.2.5",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^3.0.9",
    "lint-staged": "^12.4.1",
    "minimist": "^1.2.6",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.4"
  },
  "c8": {
    "all": true,
    "include": [
      "app/**/*.js"
    ],
    "exclude": [],
    "reporter": [
      "text-summary",
      "html"
    ],
    "report-dir": "./tests/Coverage",
    "check-coverage": true,
    "statements": "70",
    "branches": "70",
    "functions": "70",
    "lines": "70"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "lint-staged && exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "semi": false,
    "printWidth": 80,
    "overrides": [
      {
        "files": "tests/**/*",
        "options": {
          "printWidth": 120
        }
      }
    ]
  },
  "eslintConfig": {
    "env": {
      "es2021": true,
      "node": true
    },
    "globals": {
      "ioc": true,
      "Env": true,
      "Config": true
    },
    "plugins": [
      "prettier"
    ],
    "extends": [
      "standard",
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "ignorePatterns": [
      "**/*.d.ts"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "camelcase": "off",
      "dot-notation": "off",
      "prettier/prettier": "error",
      "no-useless-constructor": "off"
    }
  },
  "files": [
    "app/*.js",
    "app/*.d.ts",
    "app/**/*.js",
    "app/**/*.d.ts",
    "bootstrap/*.js",
    "bootstrap/*.d.ts",
    "bootstrap/**/*.js",
    "bootstrap/**/*.d.ts",
    "config/*.js",
    "config/*.d.ts",
    "config/**/*.js",
    "config/**/*.d.ts",
    "database/*.js",
    "database/*.d.ts",
    "database/**/*.js",
    "database/**/*.d.ts",
    "providers/*.js",
    "providers/*.d.ts",
    "providers/**/*.js",
    "providers/**/*.d.ts",
    "routes/*.js",
    "routes/*.d.ts",
    "routes/**/*.js",
    "routes/**/*.d.ts",
    "lang/*",
    "lang/**/*",
    "storage/*",
    "storage/**/*",
    "resources/*",
    "resources/**/*"
  ]
}
